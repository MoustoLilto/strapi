{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "description": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "short_description": {
      "type": "text",
      "required": true,
      "maxLength": 160,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "price": {
      "type": "decimal",
      "min": 0,
      "required": true,
      "default": 0
    },
    "discount_price": {
      "type": "decimal",
      "min": 0
    },
    "stock": {
      "type": "integer",
      "required": true,
      "min": 0,
      "default": 0
    },
    "sku": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "weight": {
      "type": "decimal",
      "default": 0,
      "min": 0
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "videos",
        "files"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "ingredients": {
      "type": "blocks",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "how_to_use": {
      "type": "blocks",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "hair_type": {
      "type": "enumeration",
      "enum": [
        "all",
        "straight",
        "wavy",
        "curly",
        "coily",
        "thin",
        "thick",
        "damaged",
        "colored"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "default": "all"
    },
    "product_type": {
      "type": "enumeration",
      "enum": [
        "shampoo",
        "conditioner",
        "mask",
        "oil",
        "serum",
        "styling",
        "accessory",
        "face_care",
        "other"
      ],
      "required": true
    },
    "benefits": {
      "type": "component",
      "repeatable": true,
      "component": "product.benefit",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "max": 5
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "volume": {
      "type": "string",
      "required": true
    },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::brand.brand",
      "inversedBy": "products"
    },
    "reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::review.review",
      "mappedBy": "product"
    },
    "average_rating": {
      "type": "decimal",
      "min": 0,
      "max": 5,
      "description": "Note moyenne calcul√©e"
    },
    "review_count": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "description": "Nombre total d'avis"
    }
  }
}
